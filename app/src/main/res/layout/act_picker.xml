<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.pin.assistme.ColorPicker
        android:id="@+id/colorPicker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.8" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_above="@+id/default_button"/>

    <com.RippleButton.SmartButton
            android:id="@+id/default_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.2"
            android:text="@string/reset_to_default"
            android:layout_alignTop="@+id/puthandhere" />
    <com.RippleButton.SmartButton
        android:id="@+id/puthandhere"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0.2"
        android:text="@string/choose_color" android:layout_gravity="right"
        android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>

</RelativeLayout>