<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#CCFF66"
        >
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:orientation="vertical" android:paddingBottom="40dp" android:paddingTop="20dp">


            <ImageView android:layout_width="220dp" android:layout_height="400dp"
                       android:background="@drawable/instructions_home" android:layout_gravity="center_horizontal"
                       android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:id="@+id/home"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="This is your home screen"
                    android:id="@+id/day" android:textSize="30dp"
                    android:textColor="#ff5ca2ff" android:layout_below="@+id/home"
                    android:layout_centerHorizontal="true"/>

            <ImageView android:layout_width="220dp" android:layout_height="400dp"
                       android:background="@drawable/instructions_home_pressed"
                       android:id="@+id/home_pressed"
                       android:layout_below="@+id/day" android:layout_alignLeft="@+id/home"/>

            <ImageView android:layout_width="220dp" android:layout_height="400dp"
                       android:background="@drawable/instructions_listening"
                       android:id="@+id/listening"
                       android:layout_below="@+id/textView2" android:layout_alignLeft="@+id/home"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textSize="30dp" android:textColor="#ff5ca2ff"
                      android:id="@+id/textView3"
                      android:layout_below="@+id/listening" android:layout_centerHorizontal="true"
                      android:text="Talk while the mic is green"/>

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:id="@+id/hand"
                    android:background="@drawable/hand"
                android:layout_above="@+id/listening"
                android:layout_alignRight="@+id/textView3" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Press the mic to talk"
                      android:id="@+id/textView2" android:textSize="30dp" android:textColor="#ff5ca2ff"
                      android:layout_below="@+id/home_pressed" android:layout_centerHorizontal="true"/>

            <ImageView android:layout_width="220dp" android:layout_height="400dp"
                       android:background="@drawable/instructions_answered"
                       android:id="@+id/answer"
                       android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/home"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="You will get an answer"
                      android:textSize="30dp" android:textColor="#ff5ca2ff"
                      android:id="@+id/textView4"
                      android:layout_below="@+id/answer" android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>