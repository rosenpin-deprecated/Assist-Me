<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ff9a001c"
        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="40dp" android:paddingTop="20dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:id="@+id/imageView"
            android:src="@drawable/preferencess"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text='In your preferences screen pick \n "make it mine"'
            android:id="@+id/day"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:gravity="center"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/hand4"
            android:background="@drawable/hand"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="181dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageView" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:id="@+id/imageView2"
            android:src="@drawable/instruction_make_mine"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/day"
            android:layout_alignLeft="@+id/day"
            android:layout_marginTop="60dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Do you like siri? \n Try siri mode"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/hand5"
            android:background="@drawable/hand"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_marginBottom="136dp" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:id="@+id/imageView3"
            android:src="@drawable/instruction_make_mine"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Try pick color for fully customize your assistant"
            android:layout_below="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView2"
         />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/imageView4"
            android:background="@drawable/hand"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/hand4"
            android:layout_marginTop="58dp" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:id="@+id/imageView7"
            android:layout_gravity="center_horizontal"
            android:layout_alignLeft="@+id/day"
            android:gravity="center_horizontal"
            android:background="@drawable/color"
            android:layout_below="@id/textView3"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pick your color then press choose color"
            android:layout_below="@+id/imageView7"
            android:layout_alignLeft="@+id/imageView2"
         />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>